{
    "apiVersion": 2,
    "name": "sp-blocks/blockplugin",
    "title": "Block Plugin",
    "description": "My Block plugin test",
    "category": "text",
    "icon": "buddicons-replies",
    "textdomain": "sp-block-plugin",
    "editorScript": "file:./build/index.js",
    "style": "file:./build/style-index.css",
    "editorStyle": "file:./build/index.css",
    "supports": {
        "html": false,
        "color": {
            "text": true,
            "background": true,
            "gradients": true
        },
        "spacing": {
            "padding": true,
            "margin": true
        }
    },
    "styles": [
        {
            "name": "squared",
            "label": "Squared",
            "isDefault": true
        },
        {
            "name": "rounded",
            "label": "Rounded"
        },
        {
            "name": "circle",
            "label": "Circle"
        }
    ],
    "example": {
        "attributes": {
            "text": "This is some text",
            "alignment": "center"
        }
    },
    "attributes": {
        "text": {
            "type": "string",
            "source": "html",
            "selector": "h4"
        },
        "alignment": {
            "type": "string",
            "default": "left"
        },
        "blockAlignment": {
            "type": "string",
            "default": "none"
        },
        "shadow": {
            "type": "boolean",
            "default": false
        },
        "shadowOpacity": {
            "type": "number",
            "default": 30
        },

        "style": {
            "type": "object",
            "default": {
                "color": {
                    "background": "#D1D0EA",
                    "text": "#111111"
                },
                "spacing": {
                    "padding": "10px",
                    "margin": "20px"
                }
            }
        }
    }
}
